---
type Props = {
    title?: string;
};

const { title = "Jeffrey Berry" } = Astro.props satisfies Props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="description" content="My personal site">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" href="/images/favicon.ico">
        <title>{title}</title>
    </head>
    <body>
        <main>
            <slot/>
        </main>
    </body>
</html>
